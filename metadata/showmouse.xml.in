<?xml version="1.0" encoding="UTF-8"?>
<fusilli>
	<plugin name="showmouse">
		<_short>Show mouse</_short>
		<_long>Increases the visibility of the mouse pointer</_long>
		<category>Accessibility</category>

		<deps>
			<relation type="after">
				<plugin>cube</plugin>
			</relation>
		</deps>

		<group>
			<_short>General</_short>

			<subgroup>
				<option name="initiate_key" type="string">
					<_short>Initiate Key</_short>
					<_long>Toggle the mouse pointer trail.</_long>
					<hint>key</hint>
					<default>&lt;Super&gt;k</default>
				</option>

				<option name="initiate_button" type="string">
					<_short>Initiate Button</_short>
					<_long>Toggle the mouse pointer trail.</_long>
					<hint>button</hint>
					<default/>
				</option>

				<option name="rotation_speed" type="float" per_screen="true">
					<_short>Rotation speed</_short>
					<_long>Rotation speed.</_long>
					<default>0.5</default>
					<min>0.1</min>
					<max>10.0</max>
					<precision>0.1</precision>
				</option>

				<option name="radius" type="int" per_screen="true">
					<_short>Radius</_short>
					<_long>Ring radius</_long>
					<default>100</default>
					<min>10</min>
					<max>1000</max>
				</option>

				<option name="emitters" type="int" per_screen="true">
					<_short>Emitters</_short>
					<_long>Number of particle emitters (0 to disable).</_long>
					<default>3</default>
					<min>0</min>
					<max>10</max>
				</option>
			</subgroup>

			<subgroup collapsible="true">
				<_short>Guides</_short>

				<option name="guide_thickness" type="int" per_screen="true">
					<_short>Guide thickness</_short>
					<_long>How thick mouse guides should be, in pixels.</_long>
					<default>0</default>
					<min>0</min>
					<max>20</max>
				</option>

				<option name="guide_empty_radius" type="int" per_screen="true">
					<_short>Guide empty radius</_short>
					<_long>Radius of the disk around the cursor which doesn't contain guides.</_long>
					<default>20</default>
					<min>0</min>
					<max>100</max>
				</option>

				<option name="guide_color" type="string" per_screen="true">
					<_short>Guide Color</_short>
					<_long>Guide color.</_long>
					<hint>color</hint>
					<default>#ff000099</default>
				</option>
			</subgroup>
		</group>

		<group>
			<_short>Particle Options</_short>

			<subgroup>
				<option name="num_particles" type="int" per_screen="true">
					<_short>Number Of Particles</_short>
					<_long>Number of particles.</_long>
					<default>500</default>
					<min>10</min>
					<max>2000</max>
				</option>

				<option name="size" type="float" per_screen="true">
					<_short>Particle Size</_short>
					<_long>Particle size.</_long>
					<default>10.0</default>
					<min>0.1</min>
					<max>20</max>
					<precision>0.1</precision>
				</option>

				<option name="slowdown" type="float" per_screen="true">
					<_short>Particle Slowdown</_short>
					<_long>Particle slowdown.</_long>
					<default>1.0</default>
					<min>0.1</min>
					<max>10</max>
					<precision>0.1</precision>
				</option>

				<option name="life" type="float" per_screen="true">
					<_short>Particle Life</_short>
					<_long>Particle life.</_long>
					<default>0.7</default>
					<min>0.1</min>
					<max>1</max>
					<precision>0.1</precision>
				</option>

				<option name="darken" type="float" per_screen="true">
					<_short>Darken backgound</_short>
					<_long>Darken background under particles</_long>
					<default>0.9</default>
					<min>0.0</min>
					<max>1.0</max>
					<precision>0.1</precision>
				</option>

				<option name="blend" type="bool" per_screen="true">
					<_short>Additive blending</_short>
					<_long>Additive blending of particles</_long>
					<default>true</default>
				</option>

				<option name="color" type="string" per_screen="true">
					<_short>Particle Color</_short>
					<_long>Particle color.</_long>
					<hint>color</hint>
					<default>#ffdf40ff</default>
				</option>

				<option name="random" type="bool" per_screen="true">
					<_short>Randomly Colored Particles</_short>
					<_long>Have random colors for the particles</_long>
					<default>false</default>
				</option>
			</subgroup>
		</group>
	</plugin>
</fusilli>
